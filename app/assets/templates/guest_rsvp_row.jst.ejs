<div class="col-sm-6">
  <% if (guest.get('name') != '') { %>
    <p><%= guest.get('name') %> <a class="edit-name">Edit</a></p>
  <% } else { %>
    <input type="text" class="form-control" placeholder="Plus one - Please add guest's name"/>
  <% } %>
</div>
<div class="col-sm-3 radio-group">
  <% var checked = (guestRsvp.get("status") == true ? "checked" : "") %>
  <input type="radio" name="status<%= guest.id %>" val="true" <%= checked %>/> Yes
<!-- </div> -->
<!-- <div class="col&#45;sm&#45;1 radio&#45;group"> -->
  <% var checked = (guestRsvp.get("status") == false ? "checked" : "") %>
  <input class="no" type="radio" name="status<%= guest.id %>" val="false" <%= checked %>/> No
</div>
